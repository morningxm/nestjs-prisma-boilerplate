{
  "name": "nestjs-prisma-boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "isoftchamp",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"(src|test|prisma)/**/*.(js|mjs|cjs|jsx|ts|json|json5|jsonc|yml|yaml|md|markdown|graphql|gql|ng|sql|prisma)\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "dev:worker": "nest start --entryFile worker --watch",
    "debug": "nest start --debug --watch",
    "debug:worker": "nest start --entryFile worker --debug --watch",
    "prod": "node build/web",
    "prod:worker": "node build/worker",
    "prisma:generate": "prisma generate",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./test/jest.json --forceExit",
    "test:watch": "jest --watch --config ./test/jest.json --forceExit",
    "test:cov": "jest --coverage --config ./test/jest.json --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest.json --forceExit",
    "test:e2e": "jest --config ./test/jest-e2e.json --forceExit",
    "test:e2e:watch": "jest --watch --config ./test/jest-e2e.json --forceExit",
    "postinstall": "prisma generate",
    "pre-commit": "lint-staged",
    "doppler:dev": "doppler run --config dev -- npm run dev",
    "doppler:dev:worker": "doppler run --config dev -- npm run dev:worker",
    "doppler:test": "doppler run --config test -- npm run test",
    "doppler:test:e2e": "doppler run --config test -- npm run test:e2e",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.3",
    "@nestjs/bullmq": "^10.2.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.1",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/websockets": "^10.4.1",
    "@prisma/client": "^5.19.1",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.13.0",
    "cache-manager": "^5.7.6",
    "cache-manager-redis-yet": "^5.1.4",
    "chalk": "4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "lint-staged": "^15.2.10",
    "lodash": "^4.17.21",
    "nest-winston": "^1.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.3.1",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.6",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.19.1",
    "socket.io-client": "^4.7.5",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,json5,jsonc,yml,yaml,md,markdown,graphql,gql,ng,sql,prisma}": [
      "prettier --write"
    ]
  }
}
